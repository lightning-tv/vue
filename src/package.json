{
  "name": "@lightningjs/vue",
  "version": "0.0.2",
  "description": "Lightning renderer for VueJS",
  "type": "module",
  "source": "./dist/vue/index.js",
  "main": "./dist/vue/index.js",
  "types": "./dist/vue/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:fix": "npm run lint:fix:prettier && npm run lint:fix:eslint",
    "lint:prettier": "prettier --check \"**/*.{ts,js,cjs,md}\"",
    "lint:fix:prettier": "prettier --write \"**/*.{ts,js,cjs,md}\"",
    "lint:eslint": "eslint .",
    "lint:fix:eslint": "eslint --fix .",
    "build": "rm -rf dist/ && tsc --build && tsc-alias",
    "tsc": "tsc",
    "watch": "tsc -w",
    "prepare": "husky",
    "prepack": "npm run build"
  },
  "keywords": [
    "vue",
    "lightning",
    "javascript",
    "canvas",
    "web",
    "tv"
  ],
  "author": "Chris Lorenzo",
  "license": "Apache-2.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,cjs,md}": "prettier --write"
  },
  "peerDependencies": {
    "@lightningjs/renderer": "^0.8.3",
    "@vue/reactivity": "^3.4.21",
    "@vue/runtime-core": "^3.4.21",
    "@vue/shared": "^3.4.21",
    "vue": "^3.4.21"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightning-js/solid.git"
  },
  "files": [
    "dist",
    "jsx-runtime.d.ts",
    "../../LICENSE",
    "../../NOTICE",
    "README.md"
  ]
}
