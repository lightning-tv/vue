{
  "name": "@lightningtv/vue",
  "version": "0.3.2",
  "description": "Lightning Renderer for VueJS",
  "type": "module",
  "source": "src/index.ts",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./primitives": {
      "types": "./src/primitives/index.ts",
      "import": "./src/primitives/index.ts"
    },
    "./row": "./src/primitives/Row.vue",
    "./column": "./src/primitives/Column.vue"
  },
  "sideEffects": false,
  "scripts": {
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:fix": "npm run lint:fix:prettier && npm run lint:fix:eslint",
    "lint:prettier": "prettier --check \"**/*.{ts,js,cjs,md}\"",
    "lint:fix:prettier": "prettier --write \"**/*.{ts,js,cjs,md}\"",
    "lint:eslint": "eslint .",
    "lint:fix:eslint": "eslint --fix .",
    "build": "npm run tsc",
    "tsc": "tsc",
    "watch": "tsc -w",
    "prepare": "husky",
    "prepack": "npm run build"
  },
  "keywords": [
    "lightning",
    "javascript",
    "canvas",
    "web",
    "tv"
  ],
  "author": "Chris Lorenzo",
  "license": "Apache-2.0",
  "dependencies": {
    "@lightningtv/core": "1.3.9",
    "@lightningtv/solid-ui": "^0.21.2",
    "debounce": "^2.1.0",
    "lodash": "^4.17.21",
    "vue-debounce": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,cjs,md}": "prettier --write"
  },
  "peerDependencies": {
    "@lightningjs/renderer": "^1.0.0",
    "@vue/reactivity": "^3.4.21",
    "@vue/runtime-core": "^3.4.21",
    "@vue/shared": "^3.4.21",
    "vue": "^3.4.21"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightning-tv/vue.git"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "NOTICE",
    "README.md"
  ]
}
